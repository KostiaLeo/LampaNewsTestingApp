<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/photo_top"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="8dp"
            android:background="#E7E5E5"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:gravity="start"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="Name"
            android:layout_above="@id/shortlay"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/shortlay"
            android:layout_alignBottom="@id/photo_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="Type"
                android:textColor="#3492DD"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/type"
                android:layout_marginLeft="4dp"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="cost"
                android:textSize="12sp" />
        </LinearLayout>

</RelativeLayout>

